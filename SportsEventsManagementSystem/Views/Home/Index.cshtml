@{
    ViewBag.Title = "Anasayfa";
}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top" id="navigation-example">
    <div class="container-fluid pt-4 ml-1">
        <div class="navbar-wrapper">
            <a class="navbar-brand">@ViewBag.Message</a>
        </div>
        <div class="navbar-wrapper mr-2">
            <a class="nav-link material-icons" style="color: #18ce0f; " href="@Url.Action("Logout", "Home")">logout</a>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="content pt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-warning card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">person</i>
                        </div>
                        <p class="card-category">Toplam Kullanıcı Sayısı</p>
                        <h3 class="card-title">
                            @ViewBag.UserCount
                        </h3>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-success card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">groups</i>
                        </div>
                        <p class="card-category">Toplam Oyuncu Sayısı</p>
                        <h3 class="card-title">
                            @ViewBag.PlayerCount
                        </h3>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-danger card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">sports</i>
                        </div>
                        <p class="card-category">Toplam Hakem Sayısı</p>
                        <h3 class="card-title">
                            @ViewBag.RefereeCount
                        </h3>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">fact_check</i>
                        </div>
                        <p class="card-category">Müsabaka Sayısı</p>
                        <h3 class="card-title">
                            @ViewBag.CompCount
                        </h3>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Genç Oyuncular</h4>
                        <p class="card-category">
                            En genç 5 oyuncu
                        </p>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Forma No</th>
                                    <th>Uyruk</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Takımı</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Forma No</th>
                                    <th>Uyruk</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Takımı</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in ViewBag.YoungPlayer)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.UniformNumber</td>
                                        <td>@item.Nationality</td>
                                        <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", @item.DateofBirth))</td>
                                        <td>@item.Team</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Müsabakalar</h4>
                        <p class="card-category">
                            Yakın tarihteki 5 müsabakanın bilgisi
                        </p>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ev Sahibi</th>
                                    <th>Rakip</th>
                                    <th>Hakem</th>
                                    <th>Müsabaka Tarihi</th>
                                    <th>Müsabaka Saati</th>
                                    <th>Müsabaka Türü</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ev Sahibi</th>
                                    <th>Rakip</th>
                                    <th>Hakem</th>
                                    <th>Müsabaka Tarihi</th>
                                    <th>Müsabaka Saati</th>
                                    <th>Müsabaka Türü</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in ViewBag.Comp)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Home</td>
                                        <td>@item.Away</td>
                                        <td>@item.Referee</td>
                                        <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", @item.Date))</td>
                                        <td>@item.Time</td>
                                        <td>@item.Type</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>